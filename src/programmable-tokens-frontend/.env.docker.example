# Docker Environment Variables
# Copy this file to .env.docker and fill in your Blockfrost API keys

# Preview Network
BLOCKFROST_PREVIEW_API_KEY=your_preview_api_key_here

# Preprod Network
BLOCKFROST_PREPROD_API_KEY=your_preprod_api_key_here

# Mainnet Network
BLOCKFROST_MAINNET_API_KEY=your_mainnet_api_key_here

# Backend API URLs per network
NEXT_PUBLIC_API_BASE_URL_PREVIEW=https://preview-indexer.programmabletokens.xyz
NEXT_PUBLIC_API_BASE_URL_PREPROD=https://preprod-indexer.programmabletokens.xyz
NEXT_PUBLIC_API_BASE_URL_MAINNET=https://mainnet-indexer.programmabletokens.xyz

# Base URLs for Open Graph metadata (optional)
# Set these to your production URLs when deploying
NEXT_PUBLIC_BASE_URL_PREVIEW=https://preview.your-domain.com
NEXT_PUBLIC_BASE_URL_PREPROD=https://preprod.your-domain.com
NEXT_PUBLIC_BASE_URL_MAINNET=https://your-domain.com
